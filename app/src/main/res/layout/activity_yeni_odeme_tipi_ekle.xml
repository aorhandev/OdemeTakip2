<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YeniOdemeTipiEkle">

    <EditText
        android:id="@+id/editOtAd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Ödeme Tipi Adı"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/editOtAd"
        app:layout_constraintStart_toStartOf="@+id/editOtAd"
        app:layout_constraintTop_toBottomOf="@+id/editOtAd" />


    <EditText
        android:id="@+id/editOtPeriyod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Periyod"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/btnKaydet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Kaydet"
        android:onClick="btnKaydet_OnClick"
        app:layout_constraintEnd_toEndOf="@+id/editOtPeriyod"
        app:layout_constraintStart_toStartOf="@+id/editOtPeriyod"
        app:layout_constraintTop_toBottomOf="@+id/editOtPeriyod" />

    <Button
        android:id="@+id/btnSil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Sİl"
        android:onClick="btnSil_OnClick"
        app:layout_constraintEnd_toEndOf="@+id/editOtPeriyod"
        app:layout_constraintStart_toStartOf="@+id/editOtPeriyod"
        app:layout_constraintTop_toBottomOf="@+id/btnKaydet" />
</androidx.constraintlayout.widget.ConstraintLayout>